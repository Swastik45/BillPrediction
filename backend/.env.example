# Environment Variables Template
# Copy this file to .env and fill in the values
# Never commit .env file to git!

# === DEPLOYMENT ===
# For local development
HOST=127.0.0.1
PORT=5000
RELOAD=True

# For production (Render, Railway, etc.)
# HOST=0.0.0.0
# PORT=5000 (auto-set by platform)
# RELOAD=False

# === CORS CONFIGURATION ===
# Local development
CORS_ORIGINS=http://localhost:3000

# Production (update with your Vercel URL)
# CORS_ORIGINS=https://billprediction.vercel.app,https://www.billprediction.vercel.app

# Multiple origins separated by comma (no spaces after comma)
# CORS_ORIGINS=https://example1.com,https://example2.com

# === DATABASE (optional) ===
# SQLite database path (default: bills.db in current directory)
# DATABASE_PATH=./bills.db

# === SECURITY ===
# Add production secret key later if needed
# SECRET_KEY=your-secret-key-here

# === LOGGING ===
# For production: info, warning, error
# For development: debug
LOG_LEVEL=info
